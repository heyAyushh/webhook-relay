[Unit]
Description=Kafka OpenClaw Hook Consumer
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=automq
Group=automq
EnvironmentFile=/etc/kafka-openclaw-hook/kafka-openclaw-hook.env
ExecStart=/usr/local/bin/kafka-openclaw-hook
Restart=always
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadOnlyPaths=/
ReadWritePaths=/run

[Install]
WantedBy=multi-user.target
