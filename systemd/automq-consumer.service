[Unit]
Description=AutoMQ Consumer for OpenClaw
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=automq
Group=automq
EnvironmentFile=/etc/automq-consumer/consumer.env
ExecStart=/usr/local/bin/automq-consumer
Restart=always
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadOnlyPaths=/
ReadWritePaths=/run

[Install]
WantedBy=multi-user.target
