{
  "boot-source": {
    "kernel_image_path": "/opt/firecracker/vmlinux.bin",
    "boot_args": "console=ttyS0 reboot=k panic=1 pci=off init=/init"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "/opt/webhook-relay/rootfs.ext4",
      "is_root_device": true,
      "is_read_only": true
    },
    {
      "drive_id": "data",
      "path_on_host": "/opt/webhook-relay/data.ext4",
      "is_root_device": false,
      "is_read_only": false
    }
  ],
  "machine-config": {
    "vcpu_count": 1,
    "mem_size_mib": 256,
    "ht_enabled": false
  },
  "network-interfaces": [
    {
      "iface_id": "eth0",
      "guest_mac": "02:FC:00:00:00:01",
      "host_dev_name": "tap0"
    }
  ],
  "logger": {
    "log_path": "/tmp/firecracker-webhook-relay.log",
    "level": "Info",
    "show_level": true,
    "show_log_origin": true
  }
}
