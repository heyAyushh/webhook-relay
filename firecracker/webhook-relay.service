[Unit]
Description=Webhook Relay Firecracker MicroVM
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/firecracker --config-file /opt/webhook-relay/firecracker-config.json
Restart=always
RestartSec=3
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
